@model ProductModel
@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)


<div class="options">
    <input type="submit" value="@T("Admin.Common.Preview")" onclick="javascript:OpenWindow('@Url.RouteUrl("Product", new { SeName = Model.SeName })', 800, 600, true); return false;" class="btn btn-sm btn-primary btn-flat " />
    <input type="submit" name="save" class="btn btn-sm btn-primary btn-flat " value="@T("Admin.Common.Save")" />
    <input type="submit" name="save-continue" class="btn btn-sm btn-primary btn-flat " value="@T("Admin.Common.SaveContinue")" />
    <input type="submit" id="copyproduct" name="copyproduct" class="btn btn-sm btn-primary btn-flat " value="@T("Admin.Catalog.Products.Copy")" />
    <input type="text" name="currentoption" id="currentoption" value="@ViewBag.CurrentOption" style="display:none" />
    <input type="button" id="product-delete" class="btn btn-sm btn-primary btn-flat " value="@T("Admin.Common.Delete")" />
</div>
<br />
<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                    基本信息</a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse ">
            <div class="panel-body">
                @TabInfo()
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                    商品图片
                </a>
            </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse ">
            <div class="panel-body">
                @TabPictures()
             </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                    规格参数分类
                </a>
            </h4>
        </div>
        <div id="collapseThree" class="panel-collapse collapse ">
            <div class="panel-body">
                @TabCategories()
                <hr />
                @TabSpecificationAttributes()
                <hr />
                @TabProductAttributes()
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
                    关联商品
                </a>
            </h4>
        </div>
        <div id="collapseFour" class="panel-collapse collapse ">
            <div class="panel-body">
                @TabRelatedProducts()
                @*<hr/>
                @TabCrossSells()
                <hr />
                @TabAssociatedProducts()*@
             </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseFive">
                    权限控制
                </a>
            </h4>
        </div>
        <div id="collapseFive" class="panel-collapse collapse ">
            <div class="panel-body">
                @TabAcl()
                <hr />
                @TabStores()
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseSix">
                    折扣价格
                </a>
            </h4>
        </div>
        <div id="collapseSix" class="panel-collapse collapse ">
            <div class="panel-body">
                @TabTierPrices()
                <hr />
                @TabDiscounts()
            </div>
        </div>
    </div>
    @if (Model.Id > 0)
    {
        <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" class="commonalink" data-toggle="collapse" data-parent="#accordion" href="#collapseorder">
                    已购买订单
                </a>
            </h4>
        </div>
            <div id="collapseorder" class="panel-collapse collapse ">
                <div class="panel-body">
                    @TabPurchasedWithOrders()
                </div>
            </div>
    </div>
        
    }
</div>



<script>
    $(document).ready(function () {
        $($("#currentoption").val()).attr("class", "panel-collapse collapse in");
        $('.commonalink').bind('click', function () {
            $("#currentoption").val($(this).attr('href'));
        })
        //$("#product-edit").kendoTabStrip({
        //    animation: {
        //        open: {
        //            effects: "fadeIn"
        //        }
        //    },
        //    select: tabstrip_on_tab_select
        //});
        
    });
</script>


 

