@{
    Layout = "~/Views/Shared/_Root.Head.cshtml";
}
@Html.Widget("body_start_html_tag_after")
@Html.Partial("_Notifications")
@Html.Action("AdminHeaderLinks", "Common")
<div class="site-topbar">
    <div class="container">
        <div class="topbar-nav">
            <a class="current" href="@Url.RouteUrl("HomePage")">瑞翠华光</a>
        </div>
        <div class="topbar-info J_userInfo">
            @Html.Action("HeaderLinks", "Common")
        </div>
    </div>
</div>
<!-- .site-topbar END -->

<div class="site-header container">
    <div class="site-logo">
        <a class="logo" href="@Url.RouteUrl("HomePage")" title="瑞翠华光"><i class="iconfont">&#xe61d;</i></a>
    </div>
    <div class="header-info">
        <div class="search-section">
            @Html.Action("SearchBox", "Catalog")
        </div>
        <div class="cart-section">
            @Html.Action("FlyoutShoppingCart", "ShoppingCart")
        </div>
    </div>
    <div class="header-nav clearfix">
        <div id="J_categoryContainer" class="nav-category">
            <a class="btn-category-list" href="@Url.RouteUrl("HomePage")">全部商品分类</a>
            <div class="nav-category-section" style="display: none;">
                <ul class="nav-category-list">
                    @Html.Action("TopMenu", "Catalog")
                </ul>
            </div>
        </div>
        <div class="nav-main">
            <ul class="nav-main-list J_menuNavMain clearfix">
                <li class="nav-main-item current">
                    <a href="@Url.RouteUrl("HomePage")"><span class="text">首页</span></a>
                </li>
                <li class="nav-main-item">
                    <a href="#"><span class="text">每日新品</span><span class="arrow"></span></a>
                </li>
                <li class="nav-main-item">
                    <a href="#"><span class="text">超值推荐</span><span class="arrow"></span></a>
                </li>
                <li class="nav-main-item">
                    <a href="#"><span class="text">精品典藏</span><span class="arrow"></span></a>
                </li>
                <li class="nav-main-item">
                    <a href="#"><span class="text">VIP专区</span><span class="arrow"></span></a>
                </li>
                <li class="nav-main-item">
                    <a href="#"><span class="text">购物无忧</span><span class="arrow"></span></a>
                </li>
                <li class="nav-main-item">
                    <a href="#"><span class="text">已售欣赏</span><span class="arrow"></span></a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- .site-header END -->
<div class="container">
    @RenderBody()
</div>
<div class="site-footer">
    <div class="container">
        <div class="footer-service">
            <ul class="list-service clearfix">
                <li>
                    <a href="http://www.mi.com/service/exchange/#fastRepair" target="_blank">
                        <i class="iconfont">&#xe63a;</i>
                        <strong>1小时快修服务</strong>
                        <span>小米之家承诺1小时内完成维修</span>
                    </a>
                </li>
                <li>
                    <a href="http://www.mi.com/service/exchange" target="_blank">
                        <i class="iconfont">&#xe638;</i>
                        <strong>7天无理由退货</strong>
                        <span>收到商品7天内无理由退货服务</span>
                    </a>
                </li>
                <li>
                    <a href="http://www.mi.com/service/exchange" target="_blank">
                        <i class="iconfont">&#xe651;</i>
                        <strong>15天免费换货</strong>
                        <span>故障、质量问题免费换新货承诺</span>
                    </a>
                </li>
                <li>
                    <a href="http://www.mi.com/service/transfer" target="_blank">
                        <i class="iconfont">&#xe64d;</i>
                        <strong>满100元包邮</strong>
                        <span>在线支付满百元免邮费（除电视）</span>
                    </a>
