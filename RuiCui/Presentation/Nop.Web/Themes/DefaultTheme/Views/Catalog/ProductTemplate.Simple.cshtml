                    </li>
                    <li>
                        <a href="#goodsFaq">商品提问</a>
                    </li>

                    <li>
                        <a href="#serQue">售后服务</a>
                    </li>
                </ul>
            </div>
            <div class="box-bd" id="goodsDesc">
                @Html.Raw(Model.FullDescription)
            </div>
        </div>
        <!-- 商品描述 END-->
        <!--S 规格-->
        <div class="xm-box goods-detail-standard" id="goodsParam">

