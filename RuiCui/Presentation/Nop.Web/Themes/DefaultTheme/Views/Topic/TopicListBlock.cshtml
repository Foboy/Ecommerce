@{
    Layout = null;
}
@{
    Html.AppendScriptParts("~/Scripts/jquery.slimscroll.min.js");
    Html.AppendScriptParts("~/Scripts/jquery.fullPage.js");
    Html.AppendScriptParts("~/Scripts/jquery-ui.js");
    Html.AppendScriptParts("~/Scripts/jquery-1.10.2.min.js");
    //resources
    Html.AppendCssFileParts("~/Themes/DefaultTheme/Content/css/jquery.fullPage.css");
    Html.AppendCssFileParts("~/Themes/DefaultTheme/Content/css/shopintroduction.css");
    Html.AppendCssFileParts("~/Themes/DefaultTheme/Content/css/iconfont/iconfont.css");
}
<!DOCTYPE html>
<html @Html.Partial("LanguageAttributes")>
<head>
    <title>@Html.NopTitle(false)</title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <meta name="description" content="@(Html.NopMetaDescription())" />
    <meta name="keywords" content="@(Html.NopMetaKeywords())" />
    <meta name="generator" content="" />
    @Html.NopHeadCustom()
    @*This is used so that themes can inject content into the header*@
    @Html.Partial("Head")
    @Html.Widget("head_html_tag")
    @Html.NopCssFiles(this.Url, ResourceLocation.Head)
    @Html.NopScripts(this.Url, ResourceLocation.Head)
    @Html.NopCanonicalUrls()
    @Html.Action("RssHeaderLink", "News")
    @Html.Action("RssHeaderLink", "Blog")
    @*Favicon - upload favicon.ico file to the root directory*@
    @Html.Action("Favicon", "Common")
    <script type="text/javascript">
        $(document).ready(function() {
            $('#fullpage').fullpage({
                sectionsColor: ['#1bbc9b', '#4BBFC3', '#7BAABE', 'whitesmoke'],
                anchors: ['firstPage', 'secondPage', '3rdPage', '4thpage'],
                scrollOverflow: true,
		menu: '#menu'
            });

        });
    </script>
</head>
<body>
    <div class="menu-div">
        <ul id="menu">
            <li data-menuanchor="firstPage" class="active">
                <a href="#firstPage">
                    <i class="iconfont">&#xf02b5;</i>
                    <span>超值</span>
                </a>
            </li>
            <li data-menuanchor="secondPage">
                <a href="#secondPage">
                    <i class="iconfont">&#xf02b9;</i>
                    <span>正品</span>
                </a>
            </li>
            <li data-menuanchor="3rdPage">
                <a href="#3rdPage">
                    <i class="iconfont">&#xf0297;</i>
                    <span>包邮</span>
                </a>
            </li>
            <li data-menuanchor="4thpage">
                <a href="#4thpage">
                    <i class="iconfont">&#xf02b8;</i>
                    <span>保障</span>
                </a>
            </li>
        </ul>
    </div>
    <div id="fullpage">
        <div class="section " id="section0">
            <div class="intro">
                @Html.Action("TopicBody", "Topic", new { systemName = "超值" });
            </div>
        </div>
        <div class="section" id="section1">
            <div class="intro">
                @Html.Action("TopicBody", "Topic", new { systemName = "正品" });
            </div>
        </div>
        <div class="section" id="section2">
            <div class="intro">
                @Html.Action("TopicBody", "Topic", new { systemName = "包邮" });
            </div>
        </div>
        <div class="section" id="section3">
            <div class="intro">
                @Html.Action("TopicBody", "Topic", new { systemName = "保障" });
            </div>
        </div>
    </div>

</body>
</html>

