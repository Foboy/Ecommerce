@{
    Layout = "";
    Html.AppendCssFileParts("~/Plugins/Widgets.NivoSlider/Content/nivoslider/nivo-slider.css");
   Html.AppendScriptParts("~/Plugins/Widgets.NivoSlider/Scripts/mapper.js");
}
@model Nop.Plugin.Widgets.NivoSlider.Models.IndexModel
@using Nop.Web.Framework;

<ul class="nav nav-tabs" id="myTab">
    <li class="active"><a href="#index" data-toggle="tab">首页配置图</a></li>
    <li><a href="#tab1" data-toggle="tab">首页滑动图配置</a></li>
    <li><a href="#tab2" data-toggle="tab">滑动图右侧配置</a></li>
    <li><a href="#tab3" data-toggle="tab">滑动图底部配置</a></li>
    <li><a href="#tab4" data-toggle="tab">热卖单品</a></li>
    <li><a href="#tab5" data-toggle="tab">新品上架</a></li>
    <li><a href="#tab6" data-toggle="tab">明星单品</a></li>
    <li><a href="#tab7" data-toggle="tab">大家都喜欢</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="index">
     
        <img src="@Url.Content("~/Plugins/Widgets.NivoSlider/Content/nivoslider/sample-images/瑞翠商城.png")" class="mapper" border="0" usemap="#planetmap" alt="Planets" />
     
        <map name="planetmap" id="planetmap">
            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="107,78,390,229" onclick="showTab('tab1')" style="cursor: pointer" alt="Venus" title="首页滑动图" />


            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="393,77,480,282" onclick="showTab('tab2')" alt="Mercury" title="右边广告位" />


            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="107,229,392,282" onclick="showTab('tab3')" alt="Sun" title="滑动图底部广告位" />
            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="18,309,483,431" onclick="showTab('tab4')" alt="Sun" title="热卖单品" />
            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="18,455,483,609" onclick="showTab('tab5')" alt="Sun" title="新品上架" />
            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="18,630,483,780" onclick="showTab('tab6')" alt="Sun" title="明星单品" />
            <area shape="rect" class="icolor000000 forcegroup" rel="green,red,blue" coords="18,805,483,953" onclick="showTab('tab7')" alt="Sun" title="大家都喜欢" />

        </map>
    </div>
    <div class="tab-pane" id="tab1">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.Configure", Model._ConfigurationModel)</div>
    <div class="tab-pane" id="tab2">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.ConfigureIndexRight", Model._ConfigurationIndexRightModel)</div>
    <div class="tab-pane" id="tab3">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.ConfigureIndexSliderRoot", Model._ConfigurationIndexSliderRootModel)</div>
    <div class="tab-pane" id="tab4">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.ConfigureHot", Model._ConfigurationHotModel)</div>
    <div class="tab-pane" id="tab5">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.ConfigureNew", Model._ConfigurationNewModel)</div>
    <div class="tab-pane" id="tab6">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.ConfigureStar", Model._ConfigurationStarModel)</div>
    <div class="tab-pane" id="tab7">@Html.Partial("Nop.Plugin.Widgets.NivoSlider.Views.WidgetsNivoSlider.ConfigureLike", Model._ConfigurationLikeModel)</div>
</div>

<script>
    function showTab(name)
    {
        $('#myTab a[href="#' + name + '"]').tab('show');
    }
  
    </script>


